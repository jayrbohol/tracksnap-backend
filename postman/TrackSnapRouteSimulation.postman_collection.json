    "description": "Simulates parcel movement from pickup to final destination across Commonwealth Ave checkpoints."
  },
  "item": [
    {
      "name": "Create Parcel (Route Simulation)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "pm.test('Parcel created with id', () => pm.expect(json.id).to.be.a('string'));",
              "pm.collectionVariables.set('parcelId', json.id);",
              "pm.test('Recipient coordinates set', () => pm.expect(json.recipient.coordinates).to.be.an('object'));"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipient\": { \"name\": \"Consignee\", \"coordinates\": { \"lat\": 14.7684, \"lng\": 121.0190 } },\n  \"pickupLocation\": { \"lat\": 14.6488, \"lng\": 121.0509 },\n  \"sortationCenter\": { \"lat\": 14.6764, \"lng\": 121.0440 },\n  \"deliveryHub\": { \"lat\": 14.7316, \"lng\": 121.0290 },\n  \"metadata\": { \"route\": \"QC-Commonwealth-SM-Fairview\" }\n}"
        },
        "url": { "raw": "{{baseUrl}}/parcel", "host": ["{{baseUrl}}"], "path": ["parcel"] }
      },
      "response": []
    },
